<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>
<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <strong>Meal type:</strong>
        <%= @entry.meal_type %>
      </p>

      <p class="panel-block">
        <strong>Calories:</strong>
        <%= @entry.calories %>
      </p>

      <p class="panel-block">
        <strong>Proteins:</strong>
        <%= @entry.proteins %>
      </p>

      <p class="panel-block">
        <strong>Carbohydrates:</strong>
        <%= @entry.carbohydrates %>
      </p>

      <p class="panel-block">
        <strong>Fats:</strong>
        <%= @entry.fats %>
      </p>
    </nav>
    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %> 
        <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div> 
  </div>
</div>